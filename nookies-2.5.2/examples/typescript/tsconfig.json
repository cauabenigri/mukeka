{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "strict": false,
    "moduleResolution": "node"
  },
  "include": ["."],
  "exclude": ["node_modules"]
}
